<div id="signup" class="screenSetup centerItems">
    <img class='backgroundShape' src="/images/bg-shape-medium.svg" alt="background shape">
    <img id="signupImg" src="/images/undraw_Dog_walking_re_l61p 1.svg" alt="signup image">
    <h2>Sign up</h2>

    <form action="/auth/signupWalker" method="POST">
        <label for="username"></label >
        <input type="text" name="username" id="username" placeholder="username" required>

        <label for="email"></label>
        <input type="text" name="email" id="email" placeholder="email" required>

        <label for="password"></label>
        <input type="password" name="password" id="password" placeholder="password" required>
        <button type="submit">Create new account</button>
    </form>
    {{#if message}}
        <p style="color: red">{{message}}</p>   
    {{/if}}

</div>