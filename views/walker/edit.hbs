<h2>Edit your profile</h2>

{{#with currentWalker}}
<form action="/walker/profile" method="POST" >
{{!-- enctype="multipart/form-data" --}}

<div>
        <div>
        <label for="walkerImg">Your profile photo: </label>
        <input class="smallMargin" type="file" name="photo">
        </div>
        <br>

        <div>
        <label for="username">Username: </label>
        <input class="smallMargin" type="text" name="username" id="username" value={{username}}>
        </div>
        <br>

        <div>
        <label for="email">Email: </label>
        <input type="email" name="email" id="email" value={{email}}>
        </div>
        <br>

        <div>
        <label for="walkerExperience">Experience: </label>
        <input class="smallMargin" type="text" name="walkerExperience" id="walkerExperience" value='{{walkerExperience}}'>
        </div>
        <br>

        <div>
        <label for="price">Price: </label>
        <input type="text" name="price" id="price" value="{{price}}">
        </div>

        <div>
        <label for="city">City: </label>
        <input type="text" name="city" id="city" value="{{city}}">
        </div>

        <div>
        <label for="district">District: </label>
        <input type="text" name="district" id="district" value="{{district}}">
        </div>
</div>

    <button class="btn" type="submit">Update profile</button>
        <div class="alignLeft">
        <a class="backPadding" href="/walker/profile">Cancel</a>
    </div>
</form>
{{/with}}

<nav class="navbar">
